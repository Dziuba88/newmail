    title Responsive email
    style(type="text/css").
      * {
        -ms-text-size-adjust:100%;
        -webkit-text-size-adjust:none;
        -webkit-text-resize:100%;
        text-resize:100%;
      }
      a{outline:none;}
      a:hover{text-decoration:underline !important;}
      table td {border-collapse: collapse !important;}
      .ExternalClass, .ExternalClass a, .ExternalClass span, .ExternalClass b, .ExternalClass br, .ExternalClass p, .ExternalClass div{line-height:inherit;}
      /* responsive */
      .ctn {width: 640px}
      table.rsp {float: left;width: 33.3333333333%;border: 5px solid #fff;background: #90c0f0;}
      table.rsp td,table.rsp th{padding:5px 10px}
      .imgresp {width: 150px;margin: 10px 0}
      .imgfloat {float:left; margin: 10px 10px 0 0}
      p {margin: 0 0 10px;font-size:14px;line-height:20px;color:#10477d;font-weight:600}

      a img {border: 2px solid #326f9e}

      @media only screen and (max-width:640px) {
      .ctn {width: 100%}
      table.rsp {float: none;width: 100%;}
      .imgresp {width: 100%;margin: 10px -2px}
      }

